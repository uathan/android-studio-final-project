<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_700"
    android:orientation="vertical"
    tools:context=".Fragments.MainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="center"
            android:src="@drawable/library" />

        <TextView
            android:id="@+id/Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#AB191C4C"
            android:fontFamily="@font/archivo"
            android:text="Nathan's College"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <TextView
            android:id="@+id/mainDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#AB191C4C"
            android:fontFamily="@font/archivo"
            android:text="Nathan's College is a dynamic hub of learning, fostering academic excellence in a vibrant and supportive community. With a rich history and a commitment to innovation, our college offers a diverse range of programs designed to empower students for success. Explore our modern campuses, engage with accomplished faculty, and embark on a transformative educational journey at Nathan's College."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/informationFor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo"
            android:text="INFORMATION FOR:"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/dataType"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/blue_500"
                    android:scaleType="fitStart"
                    android:src="@drawable/courses" />

                <TextView
                    android:id="@+id/coursesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:fontFamily="@font/archivo"
                    android:text="courses"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regular"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/dataType" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/counselling"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/blue_500"
                    android:scaleType="fitStart"
                    android:src="@drawable/hands" />

                <TextView
                    android:id="@+id/counsellingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:fontFamily="@font/archivo"
                    android:text="counselling"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regular"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/counselling"
                    app:layout_constraintStart_toStartOf="@+id/counselling"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/currentStudents"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/blue_500"
                    android:scaleType="fitStart"
                    android:src="@drawable/currentstudent" />

                <TextView
                    android:id="@+id/currentStudentsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:fontFamily="@font/archivo"
                    android:text="current students"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regular"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/currentStudents"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/futureStudents"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/blue_500"
                    android:scaleType="fitStart"
                    android:src="@drawable/future" />

                <TextView
                    android:id="@+id/futureStudentsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:fontFamily="@font/archivo"
                    android:text="future students"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regular"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/futureStudents"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/alumniPicture"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:src="@drawable/alumni" />

                <Button
                    android:id="@+id/alumni"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="4"
                    android:text="Alumni" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
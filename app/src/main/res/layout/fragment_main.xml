<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/studying" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nathan's College is a dynamic hub of learning, fostering academic excellence in a vibrant and supportive community. With a rich history and a commitment to innovation, our college offers a diverse range of programs designed to empower students for success. Explore our modern campuses, engage with accomplished faculty, and embark on a transformative educational journey at Nathan's College."
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INFORMATION FOR"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/coursesPicture"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:src="@drawable/studying" />

                <Button
                    android:id="@+id/dataType"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="4"
                    android:text="Courses" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/counsellingPicture"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:src="@drawable/studying" />

                <Button
                    android:id="@+id/counselling"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="4"
                    android:text="Counselling" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/futureStudentsPicture"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:src="@drawable/studying" />

                <Button
                    android:id="@+id/futureStudents"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="4"
                    android:text="future students" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/currentStudentsPicture"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:src="@drawable/studying" />

                <Button
                    android:id="@+id/currentStudents"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="4"
                    android:text="Current Students" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/alumniPicture"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:src="@drawable/studying" />

                <Button
                    android:id="@+id/alumni"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="4"
                    android:text="Alumni" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
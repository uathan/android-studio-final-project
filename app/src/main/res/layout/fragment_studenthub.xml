<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_700"
    android:orientation="vertical"
    tools:context=".Fragments.StudenthubFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/peoplestudying" />

                <TextView
                    android:id="@+id/studentHubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#AB191C4C"
                    android:fontFamily="@font/archivo"
                    android:text="Nathan's College Student Hub"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/studentHubDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="238dp"
                    android:background="#AB191C4C"
                    android:fontFamily="@font/archivo"
                    android:text="This page will help you navigate all the services that Nathan's College offers to students!"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regular" />

            </RelativeLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/studentCardButton"
                        style="@style/box_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Get your Student Card"
                        android:textAllCaps="true"
                        android:textSize="@dimen/regular" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/bookstoreButton"
                        style="@style/box_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Order supplies from Bookstore"
                        android:textAllCaps="true"
                        android:textSize="@dimen/regular" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/chooseElective"
                        style="@style/box_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="How to choose an elective"
                        android:textAllCaps="true"
                        android:textSize="@dimen/regular" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/hoursOfOperation"
                        style="@style/box_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Our Hours of operation"
                        android:textAllCaps="true"
                        android:textSize="@dimen/regular" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/campusFloorMaps"
                        style="@style/box_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Campus and Floor Maps"
                        android:textAllCaps="true"
                        android:textSize="@dimen/regular" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/parkingPass"
                        style="@style/box_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Purchase a parking pass"
                        android:textAllCaps="true"
                        android:textSize="@dimen/regular" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/contactIT"
                        style="@style/box_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="contact I.T"
                        android:textAllCaps="true"
                        android:textSize="@dimen/regular" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/requestToWidthdraw"
                        style="@style/box_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Request to widthdraw from program"
                        android:textAllCaps="true"
                        android:textSize="@dimen/regular" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/policies"
                        style="@style/box_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Our academic policies"
                        android:textAllCaps="true"
                        android:textSize="@dimen/regular" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/archivo"
                    android:text="If you can't find what you're looking for, email us!"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regular" />

                <Button
                    android:id="@+id/emailCollegeAgain"
                    style="@style/box_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Email"
                    android:textAllCaps="true"
                    android:textSize="@dimen/regular" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>


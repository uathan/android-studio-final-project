<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_700"
    android:orientation="vertical"
    tools:context=".Fragments.TuitionFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="470dp">

        <LinearLayout
            android:id="@+id/PartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_500"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/billingCycleTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blue_500"
                    android:fontFamily="@font/archivo"
                    android:text="Choose a billing cycle"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regular" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/blue_500"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/partTimeButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/archivo"
                        android:text="Monthly"
                        android:textColor="@color/white"
                        android:textSize="@dimen/regular" />

                    <RadioButton
                        android:id="@+id/fullTimeButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/archivo"
                        android:text="Yearly"
                        android:textColor="@color/white"
                        android:textSize="@dimen/regular" />

                </RadioGroup>
            </LinearLayout>

            <TextView
                android:id="@+id/schoolfeesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_500"
                android:fontFamily="@font/archivo"
                android:text="School Fees:"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/regular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tuitionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/archivo"
                    android:text="Tuition Fee:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regular" />

                <EditText
                    android:id="@+id/tuitionTextInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:backgroundTint="@color/white"
                    android:ems="10"
                    android:fontFamily="@font/archivo"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regular" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/registrationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/archivo"
                    android:text="Registration Fee:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regular" />

                <EditText
                    android:id="@+id/registrationTextInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:backgroundTint="@color/white"
                    android:ems="10"
                    android:fontFamily="@font/archivo"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regular" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/TextbooksSuppliesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_500"
                android:fontFamily="@font/archivo"
                android:text="Textbooks and Supplies:"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/regular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textbookcostTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/archivo"
                    android:text="Textbook Costs:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regular" />

                <EditText
                    android:id="@+id/textbookTextInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:backgroundTint="@color/white"
                    android:ems="10"
                    android:fontFamily="@font/archivo"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regular" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/suppliescostTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/archivo"
                    android:text="Supplies Costs:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regular" />

                <EditText
                    android:id="@+id/suppliesTextInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:backgroundTint="@color/white"
                    android:ems="10"
                    android:fontFamily="@font/archivo"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regular" />
            </LinearLayout>

            <TextView
                android:id="@+id/LivingExpensesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_500"
                android:fontFamily="@font/archivo"
                android:text="Living Expenses:"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/regular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/housingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/archivo"
                    android:text="Housing:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regular" />

                <EditText
                    android:id="@+id/housingTextInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:backgroundTint="@color/white"
                    android:ems="10"
                    android:fontFamily="@font/archivo"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regular" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mealsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/archivo"
                    android:text="Meals:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regular" />

                <EditText
                    android:id="@+id/mealsTextInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:backgroundTint="@color/white"
                    android:ems="10"
                    android:fontFamily="@font/archivo"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regular" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/transportationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/archivo"
                    android:text="Transportation:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regular" />

                <EditText
                    android:id="@+id/transportationTextInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:backgroundTint="@color/white"
                    android:ems="10"
                    android:fontFamily="@font/archivo"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regular" />
            </LinearLayout>

            <TextView
                android:id="@+id/miscTextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_500"
                android:fontFamily="@font/archivo"
                android:text="Miscellaneous Expenses:"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/regular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/miscTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/archivo"
                    android:text="Misc:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regular" />

                <EditText
                    android:id="@+id/miscTextInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:backgroundTint="@color/white"
                    android:ems="10"
                    android:fontFamily="@font/archivo"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regular" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/calculateButton"
        style="@style/box_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="calculate"
        android:textAllCaps="true"
        android:textSize="@dimen/regular" />

    <Button
        android:id="@+id/reset"
        style="@style/box_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="reset"
        android:textAllCaps="true"
        android:textSize="@dimen/regular" />

    <LinearLayout
        android:id="@+id/resultLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:visibility="gone">

        <TextView
            android:id="@+id/resulttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:fontFamily="@font/archivo"
            android:textColor="@color/white"
            android:textSize="@dimen/regular" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:fontFamily="@font/archivo"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/regular" />
    </LinearLayout>

</LinearLayout>